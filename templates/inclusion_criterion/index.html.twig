{% extends 'base.html.twig' %}

{% block title %}Критерии включения{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('style/laboratory.css') }}" rel="stylesheet"/>
    <link href="{{ asset('style/table.css') }}" rel="stylesheet"/>
    <link href="{{ asset('style/tab.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="wrap">
        <div class="tab">
            {% block links %}
                {% include 'menu.html.twig' with {'selected':'order','isAdmin':true} %}
            {% endblock %}
        </div>
        <div class="container">
            <h1>Критерии включения</h1>
            <a href="{{ path('inclusion-criterion-create') }}" class="button">Добавить</a>

            <table class="simple-table">
                <tr class="align-left">
                    <th>Номер включения</th>
                    <th>Национальность</th>
                    <th>Курение</th>
                    <th>Алкоголь</th>
                    <th>Заболевание</th>
                    <th>Подтип</th>
                    <th>Стадия</th>
                    <th>Лечение</th>
                    <th>Хронические заболевания</th>
                    <th>Дополнительно</th>
                    <th></th>
                </tr>
                {% for inclusionCriterion in inclusionCriterions %}
                    <tr>
                        <td>{{ inclusionCriterion.id }}</td>
                        <td>{{ inclusionCriterion.nationality }}</td>
                        <td>{{ inclusionCriterion.smoking }}</td>
                        <td>{{ inclusionCriterion.alcohol }}</td>
                        <td>{{ inclusionCriterion.disease }}</td>
                        <td>{{ inclusionCriterion.subtype }}</td>
                        <td>{{ inclusionCriterion.stage }}</td>
                        <td>{{ inclusionCriterion.treatment }}</td>
                        <td>{{ inclusionCriterion.chronicDisease }}</td>
                        <td>{{ inclusionCriterion.additionally }}</td>
                        <td><a href="{{ path('inclusion-criterion-view', { 'id' : inclusionCriterion.id } ) }}" class="button">Просмотр</a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
